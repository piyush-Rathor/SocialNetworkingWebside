<form class="text-center border border-light p-5" action="/settings" target="POST">

    <p class="h4 mb-4">General</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="defaultRegisterFormFirstName" name="fname" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" id="defaultRegisterFormLastName" name="" class="form-control" placeholder="Last name">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" id="defaultRegisterFormEmail" name="lname" class="form-control mb-4" placeholder="E-mail">

    <!-- Password -->
    <!-- <input type="password" id="defaultRegisterFormPassword" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
        At least 8 characters and 1 digit
    </small> -->
    <input type="date" id="defaultRegisterFormPassword" name="dob" class="form-control mb-4" placeholder="Date of Birthday" aria-describedby="defaultRegisterFormPasswordHelpBloc">

    <!-- Phone number -->
    <input type="text" id="defaultRegisterPhonePassword" name="phoneno" class="form-control" placeholder="Phone number" aria-describedby="defaultRegisterFormPhoneHelpBlock">
    <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
        Optional - for two step authentication
    </small>
    <button class="btn btn-info btn-block my-4 setting-form-submit" type="submit">Save</button>
</form>